{
  "name": "hhpack/performance",
  "keywords": [ "timer", "hack", "performance", "time", "memory" ],
  "description": "Performance utility library for Hack",
  "authors": [
    {
      "name": "Noritaka Horio",
      "email": "holy.shared.design@gmail.com"
    }
  ],
  "license": "MIT",
  "require": {
    "hhvm": ">=3.12.0"
  },
  "require-dev": {
    "expect/peridot-expect-plugin": "~3.0",
    "peridot-php/peridot": "~1.16",
    "peridot-php/peridot-dot-reporter": "~1.0"
  },
  "autoload": {
    "psr-4": {
      "hhpack\\performance\\": "src/"
    },
    "files": [ "src/shortcut.hh" ]
  },
  "autoload-dev": {
    "psr-4": {
      "hhpack\\performance\\spec\\mock\\": "spec/mock/"
    }
  },
  "scripts": {
    "test": "vendor/bin/peridot --grep *Spec.hh -c peridot.hh spec",
    "check:init": "touch .hhconfig",
    "check": "./typecheck"
  },
  "minimum-stability": "stable"
}
